<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_title_bar"/>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingLeft="17dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <ImageView
                        android:src="@mipmap/my_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/address_text"
                        android:textColor="#999999"
                        android:text="姓名"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edit_name"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="請輸入名字"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:textSize="@dimen/address_text"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <View
                    android:background="#E5E5E5"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/address1_layout"
                    android:paddingLeft="17dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">

                    <ImageView
                        android:src="@mipmap/location1_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/address_text"
                        android:textColor="#999999"
                        android:text="地址"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/city_tv"
                        android:textSize="@dimen/address_text"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:text="未選擇"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:rotation="-90"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/left_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#E5E5E5"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/address2_layout"
                    android:paddingLeft="17dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">

                    <ImageView
                        android:visibility="invisible"
                        android:src="@mipmap/location1_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="invisible"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/address_text"
                        android:textColor="#999999"
                        android:text="地址"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/qu_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="未選擇"
                        android:textColor="@color/black"
                        android:textSize="@dimen/address_text" />

                    <ImageView
                        android:rotation="-90"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/left_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#E5E5E5"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:paddingLeft="17dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">

                    <ImageView
                        android:visibility="invisible"
                        android:src="@mipmap/location1_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="invisible"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/address_text"
                        android:textColor="#999999"
                        android:text="地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edit_address"
                        android:textSize="@dimen/address_text"
                        android:textColor="@color/black"
                        android:gravity="right|center_vertical"
                        android:hint="請輸入詳細地址"
                        android:background="@null"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:visibility="invisible"
                        android:rotation="-90"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/left_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#E5E5E5"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:paddingLeft="17dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">

                    <ImageView
                        android:visibility="invisible"
                        android:src="@mipmap/location1_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/address_text"
                        android:textColor="#999999"
                        android:text="手機號碼"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edit_phone"
                        android:background="@null"
                        android:textSize="@dimen/address_text"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:gravity="right|center_vertical"
                        android:hint="請輸入手機號碼"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:visibility="invisible"
                        android:rotation="-90"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/left_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/btn"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_975d19_radius_10"
                android:gravity="center"
                android:text="儲存"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </FrameLayout>
    </LinearLayout>

</layout>
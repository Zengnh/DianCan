<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_title_bar"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="22dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/logo"
                android:layout_width="93dp"
                android:layout_height="93dp"/>

            <LinearLayout
                android:background="@drawable/shape_e1dddd_line_radius_05"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:src="@mipmap/phone_ic"
                        android:layout_marginLeft="23dp"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"/>
                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_marginLeft="21dp"
                        android:hint="手機號碼"
                        android:textSize="16sp"
                        android:textColorHint="#999999"
                        android:background="@null"
                        android:text="0966495196"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <View
                    android:background="#ECE8E8"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>


                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:src="@mipmap/psw_ic"
                        android:layout_marginLeft="23dp"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"/>
                    <EditText
                        android:id="@+id/edit_psw"
                        android:layout_marginLeft="21dp"
                        android:hint="密碼"
                        android:text="123456"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:textColorHint="#999999"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>


            </LinearLayout>


        <FrameLayout

            android:layout_marginTop="22dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/forget_pas"
                android:textSize="@dimen/login_getcode_btn"
                android:textColor="#975D19"
                android:text="忘記密碼"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/register_tv"
                android:layout_gravity="right"
                android:textSize="@dimen/login_getcode_btn"
                android:textColor="#975D19"
                android:text="我要註冊"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/login_btn"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_975d19_radius_10"
                android:gravity="center"
                android:text="登 入"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </FrameLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.king.android.model.Shops" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_title_bar"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="98dp">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:layout_width="68dp"
                android:layout_height="68dp">
                <ImageView
                    android:id="@+id/img"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/home_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="11dp"
                android:layout_width="match_parent"
                android:layout_height="68dp">
                <TextView
                    android:text="@{data.shop_name}"
                    android:textStyle="bold"
                    android:textSize="@dimen/home_item_title"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="@{data.address}"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/home_item_address"
                        android:layout_weight="1"
                        android:textColor="#999999"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:text="15飲品"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/home_item_address"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:text="2簡餐"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/home_item_address"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/location_ic"
                        android:layout_width="11dp"
                        android:layout_height="11dp"/>
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:text="@{data.distance}"
                        android:textSize="@dimen/home_item_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="km"
                        android:textSize="@dimen/home_item_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="5.5dp"/>
        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/tab_layout"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tab1"
                    android:background="@drawable/shape_f95f70_radius_100"
                    android:layout_marginLeft="18dp"
                    android:text="飲料"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/tab2"
                    android:background="@drawable/shape_d1d1d1_radius_100"
                    android:layout_marginLeft="8dp"
                    android:text="薯條"
                    android:textStyle="bold"
                    android:textColor="#151414"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/tab3"
                    android:background="@drawable/shape_d1d1d1_radius_100"
                    android:layout_marginLeft="8dp"
                    android:text="簡餐"
                    android:textColor="#151414"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/tab4"
                    android:background="@drawable/shape_d1d1d1_radius_100"
                    android:layout_marginLeft="8dp"
                    android:text="鷄塊"
                    android:textColor="#151414"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </HorizontalScrollView>
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#E5E5E5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</layout>
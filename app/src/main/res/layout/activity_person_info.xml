<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.king.android.model.User" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_title_bar"/>

        <FrameLayout
            android:layout_marginTop="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/avatar_layout"
                app:cardCornerRadius="41dp"
                app:cardElevation="0dp"
                android:layout_width="82dp"
                android:layout_height="82dp">

                <ImageView
                    android:id="@+id/avatar_iv"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/avatar" />

            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_gravity="right|bottom"
                android:src="@mipmap/img_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </FrameLayout>


        <LinearLayout
            android:background="@drawable/shape_e1dddd_line_radius_05"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="姓名"
                    android:textSize="@dimen/personinfo_text"
                    android:textColor="#999999"
                    android:layout_marginLeft="19dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edit_name"
                    android:hint="請輸入姓名"
                    android:text="@{user.name}"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/personinfo_text"
                    android:background="@null"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="#ECE8E8"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="性別"
                    android:textSize="@dimen/personinfo_text"
                    android:textColor="#999999"
                    android:layout_marginLeft="19dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="right"
                    android:layout_marginRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/boy_layout"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/boy_v"
                            android:layout_width="15dp"
                            android:layout_height="13dp"
                            android:background="@drawable/shape_select_check" />

                        <TextView
                            android:text="男"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/personinfo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/girl_layout"
                        android:layout_marginLeft="13dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/girl_v"
                            android:background="@drawable/shape_line_c6c6c6_radlis_100"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>

                        <TextView
                            android:text="女"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/personinfo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <View
                android:background="#ECE8E8"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="電話號碼"
                    android:textSize="@dimen/personinfo_text"
                    android:textColor="#999999"
                    android:layout_marginLeft="19dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edit_phone"
                    android:hint="請輸入電話號碼"
                    android:text="@{user.mobile}"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/personinfo_text"
                    android:background="@null"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <View
                android:background="#ECE8E8"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:text="出生日期"
                    android:textSize="@dimen/personinfo_text"
                    android:textColor="#999999"
                    android:layout_marginLeft="19dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/brithday_tv"
                    android:hint="請輸選擇出生日期"
                    android:text="@{user.birthday}"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/personinfo_text"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"/>
            </FrameLayout>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/btn"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_975d19_radius_10"
                android:gravity="center"
                android:text="儲存"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </FrameLayout>
    </LinearLayout>
</layout>
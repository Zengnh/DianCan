<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.king.android.model.User" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/my_top_bg" />

                    <FrameLayout
                        android:id="@+id/title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="個人中心"
                            android:textColor="@color/white"
                            android:textSize="@dimen/my_title" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="21dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="20dp"
                            android:src="@mipmap/noti_ic" />
                    </FrameLayout>

                    <androidx.cardview.widget.CardView
                        app:cardElevation="3dp"
                        android:layout_alignTop="@id/avatar_layout"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="41dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_width="match_parent"
                        android:layout_height="138dp">

                        <LinearLayout
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginBottom="24dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="@{data.recommend_code}"
                                    android:textSize="@dimen/my_code"
                                    android:textColor="#999999"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:text="邀請碼"
                                    android:textSize="@dimen/my_text"
                                    android:textColor="#0F1823"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginBottom="24dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="@{data.nick_name}"
                                    android:textSize="@dimen/my_code"
                                    android:textColor="#333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_marginTop="4dp"
                                    android:text="@{data.name}"
                                    android:textSize="@dimen/my_text"
                                    android:textColor="#333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/wallet_layout"
                                android:layout_marginBottom="24dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/money_tv"
                                    android:text="0"
                                    android:textSize="@dimen/my_money"
                                    android:textColor="#965D1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <ImageView
                                    android:src="@mipmap/qianbao_im"
                                    android:layout_marginTop="8dp"
                                    android:text="邀請碼"
                                    android:textSize="@dimen/my_text"
                                    android:textColor="#0F1823"
                                    android:layout_width="39dp"
                                    android:layout_height="40dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/avatar_layout"
                        android:layout_below="@id/title_layout"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="41dp"
                        app:cardElevation="4dp"
                        android:layout_width="82dp"
                        android:layout_height="82dp">

                        <ImageView
                            android:id="@+id/avatar_iv"
                            android:src="@mipmap/avatar"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <View
                    android:layout_marginTop="21dp"
                    android:background="#DDDDDD"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <FrameLayout
                    android:id="@+id/person_info_layout"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <LinearLayout
                        android:paddingLeft="25dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="#975D19"
                            android:layout_width="23dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/geren2"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:text="基本資料"
                            android:layout_marginLeft="9dp"
                            android:textColor="#333333"
                            android:textSize="@dimen/my_item"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:src="@mipmap/right_gray"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <View
                    android:background="#DDDDDD"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <FrameLayout
                    android:id="@+id/address_list_layout"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <LinearLayout
                        android:paddingLeft="25dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="#975D19"
                            android:layout_width="23dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/location_select"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:text="送貨地址"
                            android:layout_marginLeft="9dp"
                            android:textColor="#333333"
                            android:textSize="@dimen/my_item"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:src="@mipmap/right_gray"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </FrameLayout>
                <View
                    android:background="#DDDDDD"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <FrameLayout
                    android:id="@+id/order_list_layout"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <LinearLayout
                        android:paddingLeft="25dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="#975D19"
                            android:layout_width="23dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/dingdan_ic"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:text="我的訂單"
                            android:layout_marginLeft="9dp"
                            android:textColor="#333333"
                            android:textSize="@dimen/my_item"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:src="@mipmap/right_gray"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <View
                    android:background="#DDDDDD"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <FrameLayout
                    android:id="@+id/my_points_layout"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <LinearLayout
                        android:paddingLeft="25dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="#975D19"
                            android:layout_width="23dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/diancan_ic"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:text="我的點數"
                            android:layout_marginLeft="9dp"
                            android:textColor="#333333"
                            android:textSize="@dimen/my_item"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="25dp"
                        android:text="@{data.score}"
                        android:textColor="#975D19"
                        android:textSize="@dimen/my_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <View
                    android:background="#DDDDDD"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <TextView
                    android:id="@+id/out_btn"
                    android:text="退出"
                    android:gravity="center"
                    android:textSize="@dimen/my_title"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape_975d19_radius_10"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</layout>
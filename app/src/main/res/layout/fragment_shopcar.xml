<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_title_bar"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                       <LinearLayout
                           android:orientation="vertical"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <androidx.recyclerview.widget.RecyclerView
                               android:id="@+id/rv"
                               android:overScrollMode="never"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"/>

                           <FrameLayout
                               android:layout_marginRight="17dp"
                               android:layout_marginLeft="19dp"
                               android:layout_marginTop="35dp"
                               android:layout_marginBottom="16dp"
                               android:gravity="center_vertical"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:id="@+id/total_tv"
                                   android:text="小計:0元"
                                   android:layout_gravity="bottom"
                                   android:textStyle="bold"
                                   android:textColor="@color/blue"
                                   android:textSize="@dimen/shopcar_item_price"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>
                               <ImageView
                                   android:id="@+id/scan_iv"
                                   android:tint="@color/black"
                                   android:layout_gravity="right"
                                   android:src="@mipmap/scan_box"
                                   android:layout_width="43dp"
                                   android:layout_height="43dp"
                                   tools:ignore="UseAppTint" />

                               <TextView
                                   android:id="@+id/floor_tips_tv"
                                   android:layout_gravity="bottom|right"
                                   android:text=""
                                   android:textStyle="bold"
                                   android:textColor="#F652DB"
                                   android:textSize="@dimen/shopcar_item_price"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>
                           </FrameLayout>

                       </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/fu_money"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="13dp"
                            android:layout_marginBottom="15dp"
                            app:cardBackgroundColor="@color/blue"
                            app:cardCornerRadius="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp">
                            <TextView
                                android:textColor="@color/white"
                                android:text="付現金"
                                android:gravity="center"
                                android:textSize="@dimen/shopcar_btn_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/buy_btn"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginBottom="15dp"
                            app:cardBackgroundColor="@color/blue"
                            app:cardCornerRadius="5dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp">
                            <TextView
                                android:textColor="@color/white"
                                android:text="綫上刷卡"
                                android:textSize="@dimen/shopcar_btn_text"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </FrameLayout>

    </LinearLayout>
</layout>
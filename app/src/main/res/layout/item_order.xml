<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="commentType"
            type="java.lang.Integer" />
        <variable
            name="data"
            type="com.king.android.model.Order" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/layout"
            android:layout_margin="16dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_marginLeft="18dp"
                        android:src="@mipmap/time_ic"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:textColor="#999999"
                        android:text="訂餐時間:"
                        android:textSize="@dimen/order_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:textColor="#999999"
                        android:text="@{data.create_time}"
                        android:textSize="@dimen/order_item_time"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="6dp"
                        android:textColor="#999999"
                        android:text="可取消"
                        android:textSize="@dimen/order_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <View
                    android:background="#E5E5E5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:textColor="#0F1823"
                    android:text="@{data.shop_name}"
                    android:textStyle="bold"
                    android:textSize="@dimen/order_item_name"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="1dp"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="5dp"
                        android:layout_width="62dp"
                        android:layout_height="62dp">
                        <ImageView
                            android:id="@+id/img_iv"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/order_img"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_marginLeft="17dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="@{data.productName}"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="#0F1823"
                            android:textStyle="bold"
                            android:textSize="@dimen/order_item_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@{data.spec}"
                            android:layout_weight="1"
                            android:textColor="#999999"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/order_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>

                        <TextView
                            android:text="@{data.shopNum}"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:textSize="@dimen/order_item_shop_price"
                        android:text="@{data.firstGoodPrice}"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_marginTop="14dp"
                    android:background="#E5E5E5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:src="@mipmap/order_ic2"
                        android:layout_marginLeft="17dp"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"/>

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/order_item_text"
                        android:text="是否外帶"
                        android:textColor="#999999"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginRight="18dp"
                        android:textSize="@dimen/order_item_shop_price"
                        android:text="@{data.is_outside}"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#E5E5E5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:src="@mipmap/computer_ic"
                        android:layout_marginLeft="17dp"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"/>

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/order_item_text"
                        android:text="接單狀態"
                        android:textColor="#999999"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@{data.send_status}"
                        android:layout_marginRight="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#E5E5E5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:src="@mipmap/qanbao_ic"
                        android:layout_marginLeft="17dp"
                        android:tint="#999999"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/order_item_text"
                        android:text="付款方式"
                        android:textColor="#999999"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@{data.payment}"
                        android:layout_marginRight="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#E5E5E5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:src="@mipmap/msg2_ic"
                        android:layout_marginLeft="17dp"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"/>

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/order_item_text"
                        android:text="是否評論"
                        android:textColor="#999999"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="@{data.user_comment.length() > 0 ?View.VISIBLE:View.GONE}"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="18dp"
                        android:textSize="@dimen/order_item_text"
                        android:text="已評論"
                        android:background="@drawable/shape_975d19_radius_100"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="@{data.user_comment.length() == 0?View.VISIBLE:View.GONE}"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="18dp"
                        android:textSize="@dimen/order_item_text"
                        android:text="未評論"
                        android:background="@drawable/shape_line_975d19_radius_100"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#E5E5E5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_marginLeft="17dp"
                        android:textSize="@dimen/order_item_text"
                        android:text="備註"
                        android:textColor="#999999"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@{data.remark}"
                        android:layout_marginRight="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#E5E5E5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_marginLeft="17dp"
                        android:textSize="@dimen/order_item_text"
                        android:text="@{data.priceDetails}"
                        android:textColor="#999999"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="合計"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/order_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="18dp"
                        android:textSize="@dimen/order_item_shop_price"
                        android:text="@{data.real_amount}"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>